# L0.defn

use base
use string


extdecl(TYPE identifier)    # external variable
    ##    var TYPE &identifier
    .var(TYPE, identifier)

# extfunc(TYPE identifier)    # external function (for I/O, etc.)


vardecl(TYPE identifier)
    ##    var TYPE &identifier
    .var(TYPE, identifier)


assignment(designator ASSIGN test)
    &designator
    &test
    &ASSIGN

statement(call)
    &call
    pop         # discard result

