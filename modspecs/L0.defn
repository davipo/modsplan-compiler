# L0.defn

use base
use string


extdecl(name)           # external variable
    var 

extdecl(name type,*)    # external function (for I/O, etc.)


vardecl(name TYPE)
    var TYPE name


assignment(designator ASSIGN test)
    &designator
    &test
    &ASSIGN

statement(call)
    &call
    pop         # discard result

